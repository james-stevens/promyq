# Alternative license arrangements are possible, contact me for more information

mkdir -m 777 /opt/data/etc
if ! test -f /opt/data/etc/promyq.yaml
	then
		cp /usr/local/etc/promyq.yaml /opt/data/etc/promyq.yaml
	fi

cd /usr/local/python
exec gunicorn --threads 3 --bind unix:/run/promyq.sock wsgi 2>&1 \
	| exec logger -t promyq -p ${PROMYQ_FACILITY:-local1}.${PROMYQ_SEVERITY:-info}
