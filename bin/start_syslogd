##########################################################################

if test "${SYSLOG_SERVER}"
	then
		exec /bin/busybox syslogd -n -R ${SYSLOG_SERVER}
	fi
if test "${DEBUG_SYSLOG}"
	then
		exec /bin/busybox syslogd -n -O -
	fi

mkdir -p /opt/data/logs
exec /bin/busybox syslogd -n -b 9 -s 100000 -O /opt/data/logs/messages
